{
  "name": "whatsapp-webhook-local",
  "version": "1.0.0",
  "description": "Local WhatsApp webhook server for Cal AI",
  "main": "server.js",
  "scripts": {
    "start": "tsx unified-server.ts",
    "start:webhook": "node server-simple.js",
    "start:api": "tsx api-server.ts",
    "start:both": "concurrently \"npm run start:webhook\" \"npm run start:api\"",
    "dev": "nodemon --exec tsx unified-server.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase": "^10.7.1",
    "firebase-admin": "^12.0.0",
    "twilio": "^5.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "tsx": "^4.20.6"
  }
}
